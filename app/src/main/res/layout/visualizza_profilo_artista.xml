<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_profilo_artista_visualizzabile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diam.giovannii.presenter.FragmentProfiloArtista">

    <LinearLayout
        android:id="@+id/linear_layout_profilo_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_profilo_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizza il tuo profilo"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_nome_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_profilo_artista_visualizzabile"

        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nome_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_nome_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_cognome_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nome_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cognome_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_cognome_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_nickname_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_cognome_artista_visualizzabile"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nickname_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_nickname_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_sesso_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nickname_artista"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_sesso_artista_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sesso"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_sesso_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_eta_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_sesso_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_eta_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Età:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_eta_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_località_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_eta_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_localita_artista_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Località"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_località_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_strumenti_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_località_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_strumenti_artista_visualizzabili_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strumenti Musicali:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listView_strumenti_musicali_artista_visualizzabili"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_generi_musicali_artista_visualizzabili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_strumenti_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_generi_musicali_artisti_visualizzabili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generi musicali suonati"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_view_generi_musicali_artista_visualizzabili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ListView
                android:id="@+id/listView_generi_musicali"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

            </ListView>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_biografia_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_generi_musicali_artista_visualizzabili"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_biografia_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biografia:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_biografia_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_numero_telefono_artista_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_biografia_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_numero_telefono_artista_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero di telefono"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_numero_telefono_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_link_social_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_numero_telefono_artista_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_link_social_artista_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link social"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_link_social_artista_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_button_modifica_e_elimina_profilo_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_link_social_artista"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_modifica_profilo_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="modificaProfiloArtista"
            android:text="Modifica" />

        <Button
            android:id="@+id/button_elimina_profilo_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="eliminaProfilo"
            android:text="Elimina" />


    </LinearLayout>


</RelativeLayout>
