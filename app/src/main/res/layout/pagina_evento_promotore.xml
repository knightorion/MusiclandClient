<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_pagina_evento_promotore"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_pagina_evento_promotore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_singolo_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagina evento promotore"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/campi_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_pagina_evento_promotore"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_nome_evento_promotore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_nome_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_nome_evento_visualizzabile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_nome_locale_evento_promotore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_nome_locale_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome locale"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_nome_locale_evento_visualizzato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_band_esibiscono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_nome_band_esibiscono_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esibizione delle band:"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/listView_band_esibiscono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_artisti_esibiscono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esibizione degli artisti:"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/listView_artisti_esibiscono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/campi_evento"
            android:id="@+id/linear_layout_localita_evento_promotore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_layout_via_evento_promotore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView_via_evento_etichetta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Via: "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView_via_evento_visualizzato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_citta_evento_promotore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView_citta_evento_etichetta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CittÃ : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView_citta_evento_visualizzato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_provincia_evento_promotore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_provincia_evento_etichetta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provincia: "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView_provincia_evento_visualizzato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_regione_evento_promotore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView_regione_evento_etichetta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regione: "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView_regione_evento_visualizzabile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear_layout_localita_evento_promotore"
            android:id="@+id/linear_layout_orario_evento_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_ora_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ora: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_ora_evento_visualizzabile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_minuti_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minuti:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_minuti_evento_visualizzato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear_layout_orario_evento_visualizzabile"
            android:id="@+id/linear_layout_data_evento_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_giorno_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giorno:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_giorno_evento_visualizzibile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_mese_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mese: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_mese_evento_visualizzabile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_anno_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anno: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_anno_evento_visualizzabile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear_layout_data_evento_visualizzabile"
            android:id="@+id/linear_layout_gener_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_genere_musicale_suonato_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generi musicali suonati:"
                android:textSize="20dp" />


            <ListView
                android:id="@+id/listView_generi_suonati_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_descrizione_evento_promotore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_gener_evento"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView_descrizione_serata_evento_etichetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info serata:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_descrizione_evento_visualizzabile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_button_pagina_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_descrizione_evento_promotore"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_modifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="modificaEventoPromotore"
            android:text="Modifica" />

        <Button
            android:id="@+id/button_elimina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="eliminaEventoPromotore"
            android:text="Elimina" />

    </LinearLayout>
</RelativeLayout>