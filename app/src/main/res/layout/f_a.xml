<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutFirstAccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.MainPrincipale">

    <LinearLayout
        android:id="@+id/linearLayoutWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutButtonFirstAccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonRegistrazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Registrati"
            android:textStyle="bold" />
        <!--android:onClick="apriFormSceltaModalita"-->

        <Button
            android:id="@+id/buttonAccedi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="apriFormLogin"
            android:text="Login"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAccediSpettatore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Accedi come spettatore"
            android:textStyle="bold" />
        <!-- android:onClick="apriAccediSpettatore"-->
    </LinearLayout>


</RelativeLayout>