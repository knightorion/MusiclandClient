<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_profilo_band"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_profilo_band_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_profilo_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAND"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_email_band_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_profilo_band_visualizzabile"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_email_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_nome_band_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_email_band_visualizzabile"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nome_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_nome_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_numero_componenti_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nome_band_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_numero_componenti_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero dei  componenti"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_numero_singoli_componenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_località_band_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_numero_componenti_band"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_localita_band_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Località"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_località_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_generi_musicali_band_visualizzabili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_località_band_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_generi_musicali_band_visualizzabili_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generi musicali suonati"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_view_generi_musicali_band_visualizzabili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ListView
                android:id="@+id/listView_generi_musicali"
                android:layout_width="wrap_content"
                android:layout_height="80dp">

            </ListView>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_biografia_band_visualizzabile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_generi_musicali_band_visualizzabili"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_biografia_visualizzabile_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biografia:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_biografia_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_numero_telefono_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_biografia_band_visualizzabile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_numero_telefono_band_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero di telefono"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_numero_telefono_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_link_social_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_numero_telefono_band"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_link_social_band_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link social"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_link_social_una_band_visualizzabile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>



</RelativeLayout>