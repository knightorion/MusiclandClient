<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_form_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_form_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_form_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea il tuo evento"
            android:textSize="35dp"
            android:textStyle="bold" />

    </LinearLayout>
    <!--aggiungere below-->

    <TextView
        android:id="@+id/textView_id_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linear_layout_nome_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_form_evento"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nome_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_nome_evento_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_nome_locale_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nome_evento"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_nome_locale_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome locale"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_nome_locale_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_nome_band_esibiscono_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nome_locale_evento"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_nome_band_esibiscono_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esibizione delle band:"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/scroll_view_lista_band_esibiscono_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp">

            <ListView
                android:id="@+id/listView_band_esibiscono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_luogo_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_nome_band_esibiscono_evento"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_via_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_via_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_citta_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CittÃ :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_citta_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_provincia_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provincia:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_provincia_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_regione_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regione:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_regione_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_orario_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_luogo_evento"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_orario_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orario:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_ora_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_data_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_orario_evento"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_data_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giorno"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_giorno_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mese"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_mese_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anno"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_anno_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_genere_musicale_suonato_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_data_evento"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_genere_musicale_suonato_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genere musicale suonato:"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/scroll_view_generi_suonati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listView_generi_suonati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_descrizione_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_genere_musicale_suonato_evento"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_descrizione_serata_evento_etichetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info serata:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_descrizione_serata_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_button_conferma_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_descrizione_evento"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_conferma_form_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="confermaPubblicazioneEvento"
            android:text="Conferma" />

        <Button
            android:id="@+id/button_annulla_form_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="annullaPubblicazioneEvento"
            android:text="Annulla" />


    </LinearLayout>

    <TextView
        android:id="@+id/email_promotore_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</RelativeLayout>
